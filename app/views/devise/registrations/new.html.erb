<div class="container">
  <div class="row" style="padding-bottom: 45px">
    <br>
    <div style="height: 3px; background-color: gray; text-align: center" class="custom-hr">
      <h2><span style="background-color: white; position: relative; top: -0.5em; padding: 20px">
        Rejestracja Użytkownika
        </span></h2>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>

     <div class="row">

       <div class="col-md-6 col-md-offset-1">

         <div class="form-inputs">
           <%= f.input :email, required: true, autofocus: true %>
           <%= f.input :name, required: true, label: 'Imię' %>
           <%= f.input :avatar, as: :file %>
           <%= f.input :password, required: true, label: 'Hasło', hint: ("#{@minimum_password_length} znaków minimum" if @validatable) %>
           <%= f.input :password_confirmation, required: true, label: 'Potwierdź hasło' %>

           <div class="form-actions">
             <%= f.button :submit, "Zarejestruj" %>
           </div>
           <br>
           <%= render "devise/shared/links" %>
         </div>

       </div>
     </div>
  <% end %>
</div>