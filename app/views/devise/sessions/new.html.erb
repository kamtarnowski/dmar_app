<div class="container">
    <div class="row" style="padding-bottom: 45px">
      <br>
      <div style="height: 3px; background-color: gray; text-align: center" class="custom-hr">
        <h2><span style="background-color: white; position: relative; top: -0.5em; padding: 20px">
                Logowanie
                </span></h2>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row" style="padding-bottom: 20px">
        <div class="col-md-6 col-md-offset-1">
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false, label: 'Hasło' %>
            <%= f.input :remember_me, as: :boolean, label: 'Zapamiętaj mnie' if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Zaloguj" %>
          </div>
        </div>

        <div class="col-md-4">
          <h3>lub zaloguj się przy pomocy:</h3>
          <%= link_to '<i style="color: #3b5998" class="fa fa-facebook-square fa-4x"></i>'.html_safe, user_omniauth_authorize_path(:facebook) %>&nbsp;&nbsp;
          <%= link_to '<i style="color: #dd4b39" class="fa fa-google-plus-square fa-4x"></i>'.html_safe, user_omniauth_authorize_path(:google_oauth2) %>
        </div>
      </div>

      <div class="row" style="padding-bottom: 50px">
        <div class="col-md-6 col-md-offset-1">
          <%= render "devise/shared/links" %>
          </div>
        </div>
    <% end %>
</div>