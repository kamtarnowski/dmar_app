    OPINIE O NAS
    </span></h3>
    </div>
  </div>
</div>

<% if @opinions.present? %>
    <div class="flexslider" style="margin: 0">
        <ul class="slides" style="background-color: lightskyblue">
          <% opinion2 = [] %>
          <% @opinions.each do %>
              <% opinion1 = @opinions.sample %>
              <% next if opinion1 == opinion2 %>
              <li>
                <div class="row" style="padding-bottom: 30px; padding-top: 30px">
                    <div class="col-md-6 col-md-push-5">
                      <% if opinion1.user.avatar.present? %>
                        <%= image_tag opinion1.user.avatar.url(:medium), class: 'img-circle', alt: opinion1.user.name + " Avatar" %>
                      <% else %>
                        <%= image_tag 'https://s3.eu-central-1.amazonaws.com/dmarapp/layout/anonymous.jpg', alt: opinion1.user.name + " Avatar", class: 'img-circle' %>
                      <% end %>
                    </div>
                      <div class="col-md-4 col-md-pull-4" style="text-align: center; padding-top: 30px">
                        <div class="hidden-md hidden-lg" style="padding-left: 90px; padding-right: 90px">
                        <h3><%= opinion1.user.name %></h3>
                          <blockquote class="blockquote-reverse">
                        <h5> <i class="fa fa-quote-left"></i> &nbsp;<%= opinion1.content %>&nbsp;<i class="fa fa-quote-right"></i> </h5>
                          </blockquote>
                        </div>

                        <div class="hidden-sm hidden-xs">
                          <h3><%= opinion1.user.name %></h3>
                          <blockquote class="blockquote-reverse">
                            <h5> <i class="fa fa-quote-left"></i> &nbsp; <%= opinion1.content %> &nbsp;<i class="fa fa-quote-right"></i>  </h5>
                          </blockquote>
                        </div>
                      </div>
                </div>
              </li>
              <% @opinions.each do %>
                  <% opinion2 = @opinions.sample %>
                  <% next if opinion1 == opinion2 %>
                  <li>
                    <div class="row" style="padding-bottom: 30px; padding-top: 30px">
                      <div class="col-md-5 col-md-offset-1 col-xs-12">
                        <% if opinion2.user.avatar.present? %>
                            <%= image_tag opinion2.user.avatar.url(:medium), class: 'img-circle', alt: opinion2.user.name + " Avatar" %>
                        <% else %>
                            <%= image_tag 'https://s3.eu-central-1.amazonaws.com/dmarapp/layout/anonymous.jpg', alt: opinion2.user.name + " Avatar", class: 'img-circle' %>
                        <% end %>
                      </div>
                      <div class="col-md-4 col-xs-12" style="text-align: center; padding-top: 30px">
                      <div class="hidden-md hidden-lg" style="padding-left: 90px; padding-right: 90px;">
                          <h3><%= opinion2.user.name%></h3>
                        <blockquote style="text-align: left">
                          <h5> <i class="fa fa-quote-left"></i> &nbsp;<%= opinion2.content %> &nbsp; <i class="fa fa-quote-right"></i> </h5>
                        </blockquote>
                      </div>
                      <div class="hidden-sm hidden-xs">
                        <h3><%= opinion2.user.name%></h3>
                        <blockquote style="text-align: left">
                          <h5> <i class="fa fa-quote-left"></i> &nbsp; <%= opinion2.content %>&nbsp; <i class="fa fa-quote-right"></i> </h5>
                        </blockquote>
                      </div>
                    </div>
                  </li>
                  <% break %>
              <% end %>
          <% end %>
        </ul>
    </div>
<% end %>

